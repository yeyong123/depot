#encoding:UTF-8
<div class="cart_title">你的购物车</div>
<table>
  <%= render @cart %>
  <tr class="total_line">
    <td colspan="2">总数:</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>
<%= button_to "清空购物车", @cart, method: :delete, confirm: "你确定清空购物车？" %>
<%= link_to '编辑', edit_cart_path(@cart) %> |
<%= link_to '返回', carts_path %>

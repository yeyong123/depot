<h1>用户列表</h1>
<% if notice %>
  <p id="notice"><%= notice %>
<% end %>
<table>
  <tr>
    <th>用户</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to '详细', user %></td>
    <td><%= link_to '编辑', edit_user_path(user) %></td>
    <td><%= link_to '删除', user, method: :delete, data: { confirm: '确定删除?' } %></td>
  </tr>
<% end %>
</table>

